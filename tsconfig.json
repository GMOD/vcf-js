{
  "include": ["src"],
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2019", "dom"],
    "target": "ES2019",
    "types": ["jest"],
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  }
}
